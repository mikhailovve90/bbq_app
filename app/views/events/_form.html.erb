<%= form_for @event do |f| %>

  <%= render partial: 'partial/form_errors', locals: {model: @event} %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :datetime %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <p><%= f.text_area :description, class: 'form-control' %></p>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-primary'%> или <%= link_to 'вернуться', :back %>
  </div>
<% end %>